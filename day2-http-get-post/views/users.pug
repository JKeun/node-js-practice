extends ./base

block content
    h1 User list ( #{users.length} )

    ul
        each user in users
            li #{user.name} | #{user.email} | #{user.phonenumber}

        h2 New User
        form(action="/users/" method="POST")
            input(type="text" name="name" placeholder="이름")
            input(type="email" name="email" placeholder="이메일")
            input(type="text" name="phonenumber" placeholder="연락처")
            input(type="submit" value="추가")
